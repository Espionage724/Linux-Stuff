#########################
####Graphics (Hammerstorm)####
#########################

sudo gedit '/usr/share/X11/xorg.conf.d/99-graphics.conf'
pkexec mousepad '/usr/share/X11/xorg.conf.d/99-graphics.conf'

Section "Device"
	Identifier	"Southern Islands"
	Driver		"radeon"
	Option		"SwapBuffersWait"	"false"
	Option		"DRI3"			"true"
EndSection

Section "Monitor"
	Identifier	"DisplayPort-0"
	Option		"LeftOf" 		"HDMI-0"
	Gamma		0.8
EndSection

Section "Monitor"
	Identifier "HDMI-0"
	Gamma		0.8
	Option		"Primary" 		"true"
EndSection

Section "Monitor"
	Identifier	"DVI-0"
	Option		"RightOf" 		"HDMI-0"
	Gamma		0.8
EndSection

